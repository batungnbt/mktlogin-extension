{
  "manifest_version": 3,
  "name": "MKTLogin Extension",
  "key": "",
  "version": "1.0.0",
  "description": "Tiện ích cung cấp chức năng trích xuất XPath và crop ảnh trực tiếp trên trang web với giao diện trực quan.",
  "permissions": ["activeTab", "storage", "scripting", "tabs", "downloads"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "MKTLogin Extension",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["xpath-selector.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": ["*://*/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["xpath-selector.js", "content.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
